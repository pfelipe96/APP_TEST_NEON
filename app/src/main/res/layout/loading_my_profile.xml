<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_1_my_profile"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_to_image_loading"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_2_my_profile"
        android:layout_width="136dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_to_view_loading"
        app:layout_constraintTop_toBottomOf="@+id/loading_1_my_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_3_my_profile"
        android:layout_width="136dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_to_view_loading"
        app:layout_constraintTop_toBottomOf="@+id/loading_2_my_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_4_my_profile"
        android:layout_width="192dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_to_view_loading"
        app:layout_constraintBottom_toTopOf="@+id/loading_5_my_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_5_my_profile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/background_to_button_loading"
        android:text="@string/send_money"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/loading_6_my_profile"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_6_my_profile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="48dp"
        android:background="@drawable/background_to_button_loading"
        android:layout_marginRight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/history_of_sends"
        android:layout_marginBottom="72dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>