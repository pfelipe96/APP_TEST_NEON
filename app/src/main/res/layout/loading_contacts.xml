<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_1_contact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/background_to_image_loading"
        android:layout_width="96dp"
        android:layout_height="96dp"
        />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_2_contact"
        android:layout_width="172dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/loading_1_contact"
        android:background="@drawable/background_to_view_loading"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading_3_contact"
        app:layout_constraintTop_toBottomOf="@+id/loading_2_contact"
        android:layout_width="172dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toRightOf="@+id/loading_1_contact"
        android:background="@drawable/background_to_view_loading"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_to_view_loading"
        app:layout_constraintTop_toBottomOf="@+id/loading_1_contact"/>

</androidx.constraintlayout.widget.ConstraintLayout>